<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_topmenu"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_top"
        android:padding="2dp">
		<Button
            android:id="@+id/bt_feedback_back"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_menu_bg"/>
        <TextView
            android:id="@+id/tv_toptitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/bt_feedback_save"
            android:layout_toRightOf="@+id/bt_feedback_back"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
		<Button
            android:id="@+id/bt_feedback_save"
            android:layout_width="60dp"
	        android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_menu_bg"/>
	</RelativeLayout>
	<EditText
	    android:id="@+id/et_feedback_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="请输入反馈意见"
	    android:gravity="top"
	    android:layout_margin="5dp"
	    android:background="@drawable/et_bg"
	    android:lines="5"/>
	<EditText
	    android:id="@+id/et_feedback_phone"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:phoneNumber="true"
	    android:hint="请输入您的手机号码"
	    android:background="@drawable/et_bg"
	    android:layout_margin="5dp"/>
</LinearLayout>