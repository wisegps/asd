<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/bg">    
    <Spinner 
        android:id="@+id/s_car"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="@drawable/icon_list"/> 
    <TextView
        android:id="@+id/tv_control_isOnLine" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/s_car"
        android:visibility="invisible"
        android:gravity="center"/>
    <RelativeLayout 
        android:id="@+id/ll_control_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingTop="4dp"
        android:layout_below="@+id/tv_control_isOnLine">
            <Button 
                android:id="@+id/iv_lock"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="@string/lock"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="30dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                android:textColor="#6a6a6a"
                android:background="@drawable/iv_open"/>
            <Button 
                android:id="@+id/iv_open"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="@string/open"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="#6a6a6a"
                android:layout_toRightOf="@+id/iv_lock"
                android:background="@drawable/iv_lock"/>
            <Button 
                android:id="@+id/iv_contor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="@string/FINDVEHICLE"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="30dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                android:textColor="#6a6a6a"
                android:layout_below="@+id/iv_open"
                android:background="@drawable/iv_contor"/>
            <Button 
                android:id="@+id/iv_un_contor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="@string/SOUND"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="#6a6a6a"
                android:layout_toRightOf="@+id/iv_contor"
                android:layout_below="@+id/iv_lock"
                android:background="@drawable/iv_un_contor"/>            
		    <ImageView 
		        android:id="@+id/iv_button_start"
		        android:layout_width="160dp"
		        android:layout_height="160dp"
		        android:layout_centerInParent="true"
		        android:contentDescription="@string/image_description"
		        android:background="@drawable/iv_button_start"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_contor"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_control_center"
        android:paddingTop="1dp" >
        <Button 
            android:id="@+id/bt_contor_Diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:drawableTop="@drawable/icon_hos"
            android:layout_weight="1"
            android:textColor="#6a6a6a"
            android:background="@drawable/bt_bottom_bg_left"
            android:text="@string/one_Diagnosis"/>
        <TextView 
		    android:layout_width="1dp"
		    android:layout_height="fill_parent"
		    android:background="@drawable/repeat_bg"/>
        <Button 
            android:id="@+id/bt_control_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:drawableTop="@drawable/icon_call"
            android:layout_weight="1"
            android:textColor="#6a6a6a"
            android:background="@drawable/bt_bottom_bg_center"
            android:text="@string/one_call"/>
        <TextView 
		    android:layout_width="1dp"
		    android:layout_height="fill_parent"
		    android:background="@drawable/repeat_bg"/>
        <Button 
            android:id="@+id/bt_contor_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:drawableTop="@drawable/icon_location"
            android:layout_weight="1"
            android:textColor="#6a6a6a"
            android:background="@drawable/bt_bottom_bg_right"
            android:text="@string/one_location"/>
    </LinearLayout>    
</RelativeLayout>